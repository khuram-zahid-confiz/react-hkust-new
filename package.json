{
  "name": "confusion",
  "version": "0.1.0",
  "private": true,
  "comment": "node version is v12.19.0 and npm version is v6.14.8",
  "dependencies": {
    "@popperjs/core": "^2.5.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "axios": "^0.20.0",
    "bootstrap": "^4.5.2",
    "bootstrap-social": "^5.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^1.9.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-popper": "^2.2.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "reactstrap": "^8.6.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --watchAll=false",
    "eject": "react-scripts eject",
    "json-server": "cd json-server && json-server --watch db.json -p 3001 -d 2000",
    "build-json-server": "docker build -t khuramzahid1991/json-server-image -f Dockerfile.server .",
    "build-react-client": "docker build -t khuramzahid1991/react-client-image -f Dockerfile.client .",
    "run-json-server": "docker run -d --name json-server --network=host khuramzahid1991/json-server-image",
    "run-react-client": "docker run -d --name react-client -p 3000:3000 -t -e JSON_SERVER_URL=\"http://localhost:3001\" khuramzahid1991/react-client-image",
    "start-docker": "npm run run-json-server && npm run run-react-client",
    "stop-docker": "docker stop json-server && docker rm json-server && docker stop react-client && docker rm react-client",
    "start-sonarqube": "docker run -d --name sonarqube --stop-timeout 3600 -p 9000:9000 -p 9092:9092 sonarqube",
    "start-minikube": "minikube start && kubectl apply -f deployment.yaml",
    "step2-minikube": "minikube service react-client-service",
    "stop-minikube": "kubectl delete -f deployment.yaml && minikube stop"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-jest": "^24.9.0"
  }
}
